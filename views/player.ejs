        </audio>
        <div class="text-center mt-3">
            <button class="btn btn-secondary" onclick="playAnotherMusic()">Play Another Music</button>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <p>&copy; 2023 desiPlayer Mirza</p>
            <p>About Me: I am a CS student with a passion for web development and music.</p>
        </div>
    </footer>

    <script>
        function playAnotherMusic() {
            window.location.href = '/';
        }
    </script>
</body>
</html>
